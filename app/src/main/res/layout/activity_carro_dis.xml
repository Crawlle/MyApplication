<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CarroDis">

    <TextView
            android:text="Modelo do automóvel:"
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="144dp"
            tools:layout_editor_absoluteY="16dp" android:textSize="18sp" android:textColor="@android:color/black"
            tools:text="Modelo do automóvel:"/>
    <EditText
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/modeloAuto"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:textColor="@android:color/black"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.088"/>
    <TextView
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:id="@+id/textView9" android:text="Distância (km):"
            android:textSize="18sp" android:textColor="@android:color/black" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/modeloAuto" tools:text="Distância (km):"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.058"/>
    <EditText
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/distancia"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.088"/>
    <TextView
            android:text="Potência do motor:"
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:id="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/distancia" android:layout_marginTop="8dp"
            android:textSize="18sp" android:textColor="@android:color/black" tools:text="Potência do motor:"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.058"/>
    <EditText
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/potencia" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.088"/>
    <TextView
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:id="@+id/textView11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/potencia" android:text="Valor do litro da gasolina:"
            android:textSize="18sp" android:textColor="@android:color/black" tools:text="Valor do litro da gasolina:"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.058"/>
    <EditText
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/gasolina"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.088"/>
    <Button
            android:text="Calcular"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" tools:text="Calcular"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gasolina"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:onClick="calculo"/>
</android.support.constraint.ConstraintLayout>