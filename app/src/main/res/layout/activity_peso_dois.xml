<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pesoDois">

    <TextView
            android:text="TextView"
            android:layout_width="373dp"
            android:layout_height="51dp"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:text="Calcule o peso ideal" android:textAlignment="center"
            android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Masculino:"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:text="Masculino:" android:textSize="18sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/altMasc"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="36dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Feminino:"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:text="Feminino:" android:textSize="18sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/altFeme"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="40dp"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/calculo" android:layout_marginTop="192dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" tools:text="Calcular"
            style="@android:style/Widget.Button.Inset"/>
    <TextView
            android:text="Peso:"
            android:layout_width="66dp"
            android:layout_height="46dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/calculo"
            tools:text="Peso:" android:textSize="18sp"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="41dp"
            android:id="@+id/result" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.102" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/calculo" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>